<p id="notice"><%= notice %></p>

<h1>Listing Prizes</h1>

<table>
  <thead>
    <tr>
      <th>Prize</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prizes.each do |prize| %>
      <tr>
        <td><%= prize.prize_id %></td>
        <td><%= prize.title %></td>
        <td><%= prize.description %></td>
        <% if can? @prize %>
        <td><%= link_to 'Show', prize %></td>
        <td><%= link_to 'Edit', edit_prize_path(prize) %></td>
        <td><%= link_to 'Destroy', prize, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'New Prize', new_prize_path %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
